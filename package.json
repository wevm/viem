{
  "name": "@viem/root",
  "private": true,
  "scripts": {
    "anvil": "source .env && anvil --fork-url $ANVIL_FORK_URL --fork-block-number $VITE_ANVIL_BLOCK_NUMBER --block-time $VITE_ANVIL_BLOCK_TIME",
    "build": "pnpm --filter './packages/**' build",
    "changeset": "changeset",
    "changeset:release": "pnpm build && changeset publish",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "dev": "pnpm --parallel --filter './packages/**' dev",
    "dev:docs": "pnpm --filter docs dev",
    "example:next": "pnpm --filter example-next dev",
    "format": "prettier . --write",
    "lint": "eslint . --cache",
    "lint:fix": "pnpm lint --fix",
    "postinstall": "husky install .config/husky && pnpm dev",
    "preinstall": "npx only-allow pnpm",
    "size": "bundlewatch --config .config/bundlewatch.config.js",
    "test": "vitest dev --coverage --no-threads",
    "test:ci": "vitest --no-threads",
    "test:ui": "vitest dev --ui --no-threads",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/eslint": "^8.4.5",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.45",
    "@types/prettier": "^2.6.3",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "@vitest/coverage-c8": "^0.24.3",
    "@vitest/ui": "^0.19.1",
    "bundlewatch": "^0.3.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "tsup": "^6.3.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vitest": "^0.24.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "pnpm format",
      "pnpm lint:fix"
    ]
  }
}
